<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".principal4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="83dp">

        <TextView
            android:id="@+id/id_text1"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="Esto es un Texto"
            android:textAlignment="center"
            android:textSize="30dp" />

        <CheckBox
            android:id="@+id/id_chk1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="May/Minusc"
            android:textAlignment="center"
            android:textSize="30sp" />

        <RadioGroup
            android:id="@+id/id_grupo1"
            android:layout_width="152dp"
            android:layout_height="114dp">

            <RadioButton
                android:id="@+id/id_rb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/azul" />

            <RadioButton
                android:id="@+id/id_rd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rojo" />

            <RadioButton
                android:id="@+id/id_rd3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/verde" />
        </RadioGroup>

        <Button
            android:id="@+id/button"
            style="@style/EstiloBotton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />

        <CheckBox
            android:id="@+id/checkBox"
            style="@style/EstiloBotton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CheckBox" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>